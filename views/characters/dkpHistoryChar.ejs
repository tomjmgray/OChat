<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Document</title>
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <main>
        <main class="wborder full">
            <div class="top-form whisper full">
                <h1>DKP Log History for <%= character.name %></h1>
                <table>
                    <tr>
                        <th>Characters Assigned Points</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Assigned By</th>
                    </tr>
                    <% character.dkpLogs.forEach((log) => { %>
                        <tr>
                            <td><% log.characters.forEach((char) => { %>
                                    <%= char.name %> 
                                <% }) %>
                            </td>
                            <td><%= log.amount %></td>
                            <td><%= log.description %></td>
                            <td><%= log.assignedBy.name %></td>
                        </tr>
                    <% }) %>
                </table>
            </div>
        </main>
    </main>
</body>
</html>